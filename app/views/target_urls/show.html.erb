<div class="container">
  <section class="py-5 text-center container">
    <div class="row">
      <div class="col">
        <h1 class="display-1"><%= link_to "Shrturl", root_path, class: "text-reset text-decoration-none" %></h1>
        <p class="lead text-muted">Shorten your URLs!</p>
      </div>
    </div>
  </section>
  <section class="pb-1 text-center container">
    <div class="row">
      <div class="col">
        <h2><%= @target_url.url %></h2>
        <p class="lead text-muted">
          Title: <%= sanitize_report_content @target_url.title %>
        </p>
        <form>
          <% @short_urls.each do |short_url| %>
            <% new_short_url = short_url.id == @new_short_url_id.to_i %>
            <div class="input-group py-1">
              <input class="form-control <%= "is-valid" if new_short_url %>"
                type="text" value="<%= short_url.url %>" readonly/>
              <button class="copy-btn btn btn-primary" type="button"
                  data-toggle="tooltip" data-placement="button"
              >Copy</button>
              <%= link_to "View Report", short_url_path(short_url), class: "btn btn-outline-secondary fw-light" %>
              <% if new_short_url %>
                <div class="valid-feedback">created!</div>
              <% end %>
            </div>
          <% end %>
        </form>
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </section>
</div>
